package com.java._shift_odd_and_even;

public class Shift {

	public static void main(String[] args) {
		int a[] = { 1, 2, 3, 4, 5, 6, 7, 8, 9 };

		int temp = 0;
		int n = 0;
		for (int i = 0; i < a.length-1-n; i++) {
			if (a[i] % 2 == 0) {
				temp = a[a.length - 1 - n];
				a[a.length - 1 - n] = a[i];
				a[i] = temp;
				n++;
			}
		}
		for (int i = 0; i < a.length; i++) {
			System.out.print(a[i]+" ");
		}
	}
}
